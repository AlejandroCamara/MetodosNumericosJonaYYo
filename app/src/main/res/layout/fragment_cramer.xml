<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.acmjscb.metodosnumericosjonayyo.Cramer">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/txtEntradaFilas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Incógnitas y valor"
        android:inputType="text"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/txtInstruccion"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Método de Cramer"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAgregarFilas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/side_nav_bar"
        android:text="Agregar Fila"
        android:textColor="?android:attr/colorButtonNormal"
        android:layout_below="@+id/txtEntradaFilas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <TextView
        android:id="@+id/txtInstruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dame los valores separados por comas"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/titulo"
        android:layout_alignLeft="@+id/titulo"
        android:layout_alignStart="@+id/titulo" />

    <ScrollView
        android:layout_width="480dp"
        android:layout_height="200dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/btnAgregarFilas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/scrollView2">


        <TextView
            android:id="@+id/txtFilasMatriz"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:text="" />
    </ScrollView>

    <Button
        android:id="@+id/btnCalcularCramer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/side_nav_bar"
        android:text="Calcular"
        android:textColor="?android:attr/colorButtonNormal" />

</RelativeLayout>
